<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Happy Tummies</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Header Section -->
    <header>
        <h1>Welcome to Happy Tummies</h1>
        
        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" placeholder="Search for menu items...">
            <button>Search</button>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <h2>Our Menu</h2>
        
        <!-- Menu List -->
        <ul class="menu-list">
            <% menuItems.forEach(item => { %>
                <li class="menu-item">
                    <h3><%= item.name %></h3>
                    <img src="/images/<%= item.image %>" alt="<%= item.name %>" class="menu-image" />
                    <p><%= item.description %></p>
                    <p>Price: $<%= item.price.toFixed(2) %></p>
                </li>
            <% }); %>
        </ul>
    </main>

    <!-- Footer
    <footer>
        <p>&copy; 2024 ArTi's Restaurant. All rights reserved.</p>
    </footer> -->
    <div class="container-fluid footer bg-light py-3" style="margin-top: 50px;">
        <div class="container text-center py-3">
            <div class="row">
                <div class="col-12 mb-3">
                    <a href="index.html" class="navbar-brand m-0">
                        <h1 class="m-0 mt-n2 display-4 text-primary"><span class="text-secondary">Happy</span>Tummies</h1>
                    </a>
                </div>
                <div class="col-12 mb-1">
                    <a class="btn btn-outline-secondary btn-social mr-2" href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-secondary btn-social mr-2" href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-secondary btn-social mr-2" href="https://www.linkedin.com/"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-outline-secondary btn-social" href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a>
                </div>
                <div class="col-12 mt-2 mb-3">
                    <div class="row">
                        <div class="col-sm-6 text-center text-sm-right border-right mb-3 mb-sm-0">
                            <h5 class="font-weight-bold mb-2">Get In Touch</h5>
                            <p class="mb-2">205 Humber College Blvd</p>
                            <p class="mb-0">Etobicoke ON M9W 5L7</p>
                        </div>
                        <div class="col-sm-6 text-center text-sm-left">
                            <h5 class="font-weight-bold mb-2">Opening Hours</h5>
                            <p class="mb-2">Mon – Fri: 9AM – 5PM</p>
                            <p class="mb-0">+(416) 675-3111</p>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <p class="m-0">&copy; <a href="#">>Group 7</a>. All Rights Reserved. Designed by <a href="https://htmlcodex.com">Arpan & Tina</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    
    <!-- Back to Top -->
    <a href="#" class="btn btn-secondary px-2 back-to-top"><i class="fa fa-angle-double-up"></i></a>
    
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/isotope/isotope.pkgd.min.js"></script>
    <script src="lib/lightbox/js/lightbox.min.js"></script>
    
    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>
    
    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    </body>
    
    </html>
</body>
</html>
